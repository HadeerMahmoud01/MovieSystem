@using MvcProject.Data.Dto
@model IEnumerable<ActorDto>


@{
    ViewData["Title"] = "Actors";

}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>

                        <th>@Html.DisplayNameFor(m =>m.ProfilePictureUrl )</th>
                        <th>@Html.DisplayNameFor(m=>m.FullName)</th>
                        <th>@Html.DisplayNameFor(m => m.Bio)</th>
                        <th>Actions</th>
                        <th>
                        <a class="btn btn-outline-success float-right" asp-action="Create">Add Actor</a>
                        </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var i in Model)
                {
                    <tr>
                        <td>
                            <img class="rounded-circle" src="@i.ProfilePictureUrl" style="max-width:150px" />

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m=>i.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m=>i.Bio)
                        </td>
                        <td class="align-middle">
                           <a class="btn btn-outline-primary" asp-action="Edit"  asp-route-id="@i.Id">
                               <i class="bi bg-info"></i>
                               Edit
                           </a>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-route-id="@i.Id" asp-action="Details">
                                <i class="bi bg-info"></i>
                               Details
                            </a>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@i.Id">
                                <i class="bi bg-info"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>