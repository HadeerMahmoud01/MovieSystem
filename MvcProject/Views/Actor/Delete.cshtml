@using MvcProject.Data.Dto
@using AutoMapper
@model ActorDto

@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <div class="col-md-8 offset-2">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group text-center">
            <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
        </div>
        <div class="form-group">
            <label asp-for="ProfilePictureUrl" class="form-control"></label>
            <input asp-for="ProfilePictureUrl" class="form-control" readonly />

        </div>
        <div class="form-group">
            <label asp-for="FullName" class="form-control"></label>
            <input asp-for="FullName" class="form-control" readonly />

        </div>
        <div class="form-group">
            <label asp-for="Bio" class="form-control"></label>
            <input asp-for="Bio" class="form-control" readonly />

        </div>
        <div class="form-group">
            <form asp-action="Delete" >
            <input asp-for="Id"hidden />
            <input class="btn btn-danager float-right" type="submit" value="Confirm" />
           </form>
            <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
        </div>

    </div>
</div>
