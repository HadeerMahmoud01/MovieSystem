@using MvcProject.Data.Dto
@using AutoMapper
@model ActorDto

@{
    ViewData["Title"] = "Add An Actor";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-center">
                <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
            </div>
            <div class="form-group">
                <label asp-for="ProfilePictureUrl" class="form-control"></label>
                <input asp-for="ProfilePictureUrl" class="form-control" />
                <span asp-validation-for="ProfilePictureUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="form-control"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="form-control"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success float-right" type="submit" value="Update" />
                <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
            </div>
        </form>
    </div>
</div>
