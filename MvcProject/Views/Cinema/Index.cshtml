@model IEnumerable<Cinema>


@{
    ViewData["Title"] = "Actors";

}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>

                    <th>@Html.DisplayNameFor(m => m.Logo)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>
                            <img class="rounded-circle" src="@i.Logo" style="max-width:150px" />

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => i.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => i.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">
                                <i class="bi bg-info"></i>
                                Edit
                            </a>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">
                                <i class="bi bg-info"></i>
                                Details
                            </a>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">
                                <i class="bi bg-info"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>